@import "colors.rasi"

configuration {
    drun {
        display-name: " Search";
    }
    run {
        display-name: "Terminal";
    }
    ssh {
        display-name: "ssh";
    }
    window {
        display-name: "Program";
    }
    combi {
        display-name: " Search";
    }

    combi-modi: "drun,ssh,combi";
    window-title: "Rofi";
    scroll-method: 1; 
    show-icons: true;
    combi-display-format: "{text} ({mode})";
    font: "Freemono 12";
}

window {
    background-color: @base01;
    border-color: @base00;
    border: 2;
    border-radius: 0;
    padding: 0;
    width: 50%;
    height: 50%;
}
mainbox {
    border: 0;
    padding: 0;
}
message {
    border:       0px 0px 0px ;
    border-color: @base00;
    padding:      1px ;
}
textbox {
    text-color: @base02;
}
listview {
    fixed-height: 1;
    border:       0px 0px 0px ;
    border-color: @base00;
    spacing:      0px ;
    scrollbar:    true;
    padding:      0px 0px 10px 0px ;
}
element {
    border:  0;
    padding: 3px 10px 3px 10px ;
}
element-text {
    background-color: inherit;
    text-color:       inherit;
}
element.normal.normal {
    background-color: @base01;
    text-color:       @base02;
}
element.normal.urgent {
    background-color: @base01;
    text-color:       @base02;
}
element.normal.active {
    background-color: @base01;
    text-color:       @base00;
}
element.selected.normal {
    background-color: @base00;
    text-color:       @base02;
}
element.selected.urgent {
    background-color: @base01;
    text-color:       @base02;
}
element.selected.active {
    background-color: @base00;
    text-color:       @base02;
}
element.alternate.normal {
    background-color: @base01;
    text-color:       @base02;
}
element.alternate.urgent {
    background-color: @base01;
    text-color:       @base02;
}
element.alternate.active {
    background-color: @base01;
    text-color:       @base00;
}
scrollbar {
    background-color: @base02;
    handle-color: #7d7d7d;
    width:        4px ;
    border:       0;
    handle-width: 3px;
    padding:      0;
}
mode-switcher {
    border:       2px 0px 0px ;
    border-color: @base00;
}
button.selected {
    background-color: @base01;
    text-color:       @base02;
}
inputbar {
    spacing:    5;
    text-color: @base02;
    padding:    1px ;
}
case-indicator {
    spacing:    2;
    text-color: @base02;
}
entry {
    spacing:    2;
    text-color: @base02;
}
prompt {
    spacing:    2;
    text-color: @base02;
}
inputbar {
    border-color: @base02;
    border: 0px 0px 1px 0px;
    margin: 5px 10px 10px 10px;
    padding: 5px 0px 5px 0px;
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}
textbox-prompt-colon {
    expand:     false;
    str:        ": ";
    margin:     0px ;
    text-color: @base02;
}


